      <id>travis</id>
      <properties>
        <database.url>jdbc:postgresql://localhost:5432/bssunittests</database.url>
        <database.user>bssunituser</database.user>
        <database.password>bssunituser</database.password>
        <schema.name>bssunituser</schema.name>
        <flyway.skip>false</flyway.skip>
