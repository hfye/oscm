  <properties>
    <database.url>jdbc:postgresql://localhost:5432/bss</database.url>
    <database.user>bssuser</database.user>
    <database.password>bssuser</database.password>
    <schema.name>bssuser</schema.name>
    <flyway.skip>true</flyway.skip>
    <!--Path to external configsettings.properties file. Used for building for docker-->
    <configsettings.path>/opt/properties/configsettings.properties</configsettings.path>
  </properties>

  <profiles>
